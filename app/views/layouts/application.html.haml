  %body
    #nav-container
      #nav
        %a#home_link{ :href => "/", :title => "Home" }
          = image_tag "logo_white_transparent.png"
        %ul#large-menu
          %li= link_to "About us", "/about-us"
          %li= link_to "Resources & Data", "/resources-and-data"
          %li= link_to "Featured work", "/featured-projects"
          %li= link_to "Our expertise", "/expertise"
        %button#trigger-menu
          %i.icon-align-justify
        %ul#button-menu
          %li= link_to "Our expertise", "/expertise"
          %li= link_to "Featured work", "/featured-projects"
          %li= link_to "Resources & Data", "/resources-and-data"
          %li= link_to "About us", "/about-us"

    - if flash[:success]
      .status#ok
        .message
          %p
            %i.icon-ok
            = flash[:success]
          %i.icon-chevron-up

    - if flash[:error]
      .status#warning
        .message
          %p
            %i.icon-warning-sign
            = flash[:error]
          %i.icon-chevron-up

    - if notice
      .status#ok
        .message
          %p
            %i.icon-ok
            = notice
          %i.icon-chevron-up

    = yield

    #footer_container
      #footer
        %ul.footer
          %li= link_to "Partners", "/about-us/partners"
          %li= link_to "Vacancies", "/vacancies"
          %li= link_to "The Team", "/employees"
          %li= link_to "Contact", "/about-us/contact"
