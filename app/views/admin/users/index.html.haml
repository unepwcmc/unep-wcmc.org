.page-header
  = link_to 'New User', new_admin_user_path, :class => 'btn pull-right'
  %h2= 'Users'

= paginate @users

%table.table.table-hover.table-bordered
  %tr
    %th.main Name
    %th Email
    %th Superadmin?
    %th Confirmed?
    %th
  - @users.each do |user|
    %tr
      %td.main= user.name
      %td= user.email
      %td= user.is_superadmin
      %td= user.confirmed_at.present?
      %td
        .btn-group
          = link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-small'
          = link_to 'Delete', admin_user_path(user), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-small btn-danger'

= paginate @users
