.page-header
  = link_to "Add a vacancy", new_admin_vacancy_path, :class => 'btn pull-right'
  %h2 Vacancies

= comfy_form_for @page, :as => :page, url: admin_vacancy_path(@page), :html => {:multipart => true} do |form|
  = render form

= render 'admin/cms/partials/pages_before'

%ul.list.sortable
  = render :partial => 'index_branch', :collection => @pages

= render 'admin/cms/partials/pages_after'
