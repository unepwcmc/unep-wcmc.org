<header class="hero background--fishing">
  <div class="hero__card">
    <div class="hero__title">
      <h1>SUBMITTED JOB APPLICATIONS</h1>
      <br>
      <p>
        SORTED BY APPLICATION
      </p>
    </div>
  </div>
</header>

<div class="container">
  <div class="title-bar">
    <h1>Listing job applications</h1>
  </div>

  <h2><%= @form.vacancy.label %></h2>
  <ul>
    <% @form.submissions.order(created_at: :desc).each do |submission| %>
      <li>
        <%= submission.name %>
        <%= link_to 'Zip', "TODO", class: "download__zip" %>
      </li>
    <% end %>
  </ul>
</div>
