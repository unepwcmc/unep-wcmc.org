- Cms::Site.find_by_identifier('news').pages.root.children.published.reverse.each do |page|
  %section.list
    %h2.smaller
      %a{:href => page.url}
        = cms_page_content(:news_header,page)
    %small 
      = formatted_time(cms_page_content(:time, page))
    %p
      = cms_page_content(:short_description, page)
