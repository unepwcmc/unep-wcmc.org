- employments = Employment.with_employees_for_project(@cms_page)

.section-group#staff
  - employments.each do |employment|
    %section.group.staff
      = link_to employment.employee.url do
        - if !cms_page_files(:photo, employment.employee).empty?
          = image_tag cms_page_content(:photo, employment.employee).file.url
      = link_to employment.employee.url do
        %h4= cms_page_content(:name, employment.employee)
      %p= employment.role
