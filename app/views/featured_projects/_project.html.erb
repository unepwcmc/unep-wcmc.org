<section class="flex__child">
  <% if page_file(:thumbnail, page) %>
    <%= link_to @cms_site.path + page.full_path do %>
      <%= image_tag page_file(:thumbnail, page).file.url %>
    <% end %>
  <% end %>
  <h2 class="smaller">
    <%= link_to @cms_site.path + page.full_path, class: 'heading' do %>
      <%= block_content(:project_name, page) %>
    <% end %>
  </h2>
  <p>
    <%= raw block_content(:short_description, page) %>
  </p>
</section>