.section-group
  - programme.employments.sort { |a, b| a.employee.position <=> b.employee.position }.each do |employment|
    - if employment.employee.is_published
      %section.group.staff{ "ng-if" => "matchName('#{block_content(:name, employment.employee).downcase}')" }
        = link_to '/' + @cms_site.path + employment.employee.full_path do
          - if !page_files(:photo, employment.employee).empty?
            = image_tag page_file(:photo, employment.employee).file
          %h4= block_content(:name, employment.employee)
        %p.role= employment.role
