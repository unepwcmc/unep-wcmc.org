<%= javascript_include_tag "es6/donate.js" %>

<div class="donation-box">
  <div class="donation-box__container">
    <div class="donation-box__header">
      <h3 class="donation-box__title">Make a one off payment</h3>
    </div>
    <div class="donation-box__body">
      <form action="/" class="donation-box__form">
        <div class="donation-box__input-group">
          <ul class="donation-box__radio-groups">
            <li class="donation-box__radio-group">
              <input type="radio" class="donation-box__radio" id="One" name="donate">
              <label for="One" class="donation-box__radio-label" data-donation-amount-button data-donation-amount="25">£25</label>
            </li>
            <li class="donation-box__radio-group">
              <input type="radio" class="donation-box__radio" id="Two" name="donate">
              <label for="Two" class="donation-box__radio-label" data-donation-amount-button data-donation-amount="50">£50</label>
            </li>
            <li class="donation-box__radio-group">
              <input type="radio" class="donation-box__radio" id="Three" name="donate">
              <label for="Three" class="donation-box__radio-label" data-donation-amount-button data-donation-amount="75">£75</label>
            </li>
            <li class="donation-box__radio-group">
              <input type="radio" class="donation-box__radio" id="Four" name="donate">
              <label for="Four" class="donation-box__radio-label" data-donation-amount-button data-donation-amount="100">£100</label>
            </li>
          </ul>
        </div>
        <div class="donation-box__input-group">
          <label class="donation-box__label donation-box__label--hidden" for="">Other Amount</label>
          <input class="donation-box__input donation-box__input--number" type="number" placeholder="other amount" step=".01" data-donation-amount-input>
        </div>
        <input class="donation-box__submit" type="submit" value="Donate" disabled="disabled" data-donation-submit>
        </input>
        <p class="donation-box__error">Please enter an amount</p>
      </form>
    </div>
  </div>
</div>
